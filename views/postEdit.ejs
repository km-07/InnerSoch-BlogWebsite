<div class="container m-50 p-50">
    <h2><em>Edit your blog:</em></h2>
    <form action="/submitEdit" method="post">
        <input name="blogNumber" type="number" placeholder="Blog Number" required/> 
        <input name="blogPassword" type="password" placeholder="Blog Password" required/> 
        <input name="newTitle" type="text" placeholder="Blog Title" required/> 
         <textarea name="newContent" placeholder="Blog Content" required></textarea> <br>
        <button type="submit" class="postAddButton">Submit</button>
    </form>
</div>
